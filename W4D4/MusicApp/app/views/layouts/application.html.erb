<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <% if current_user %>
    <p>You are logged in as <%= current_user.email %></p>
    <%= button_to 'Log Out', '/session', method: :delete %>
  <% end %>
</header>

<% if flash[:messages] %>
<ul>
  <% flash[:messages].each do |message| %>
    <li><%=message%></li>
  <% end %>
</ul>
<% end %>

<%= yield %>

</body>
</html>
