<!--
We have access to @band
 -->
<h1><%= @band.name %></h1>

<ul>
  <% @band.albums.each do |album| %>
    <li><%= link_to "#{album.name}", album_url(album.id) %></li>
    <ul>
      <li><%= album.state.capitalize %> Record</li>
      <%= button_to 'Delete', album_url(album.id), method: :delete %>
      <%= button_to 'Edit', edit_album_url(album.id), method: :get %>
    </ul>
  <% end %>
</ul>

<%= link_to 'Create an Album', '/albums/new' %>
<br>
<%= link_to 'Back to Band Index', bands_url %>
